{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "backend/**"
        ]
    },
    "deploy": {
        "startCommand": "cd backend && npm install && npm run build && npm run prisma:generate && npm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}